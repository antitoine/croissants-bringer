{% extends 'base.html.twig' %}

{% block content %}
    <table class="table">
        <caption>Optional table caption.</caption>
        <thead>
        <tr>
            <th>Position</th>
            <th>Username</th>
            <th>Email</th>
            <th>Number of participation</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr {% if loop.first %}class="success"{% endif %}>
                <th scope="row">{{ participant.position }}</th>
                <td>{{ participant.username }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.participationList|length }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}