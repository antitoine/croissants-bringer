{% extends 'email/base.html.twig' %}

{% trans_default_domain 'croissants' %}

{%- block title -%}
    {{ 'email.subject.reset_password'|trans }}
{%- endblock -%}

{%- block content -%}
    <p>{{ 'email.content.reset_password.greeting'|trans }}</p>
    <p>{{ 'email.content.reset_password.explanation'|trans }}</p>
    <table border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
        <tbody>
        <tr>
            <td align="left">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tbody>
                    <tr>
                        <td>
                            <a href="{{ confirmationUrl }}" target="_blank">{{ 'email.content.reset_password.button'|trans }}</a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
    <p>{{ 'email.content.reset_password.link'|trans }}: {{ confirmationUrl }}</p>
{%- endblock -%}