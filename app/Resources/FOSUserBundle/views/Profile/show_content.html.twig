{% trans_default_domain 'FOSUserBundle' %}

<dl class="dl-horizontal">
    <dt>{{ 'profile.show.username'|trans }}</dt>
    <dd>{{ user.username }}</dd>

    <dt>{{ 'profile.show.email'|trans }}</dt>
    <dd>{{ user.email }}</dd>

    <dt>{{ 'profile.show.position'|trans({}, 'croissants') }}</dt>
    <dd>{{ user.position }}</dd>
</dl>

<div class="text-center">
    <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-default">{{ 'profile.edit.submit'|trans }}</a>
    <a href="{{ path('fos_user_change_password') }}" class="btn btn-default">{{ 'change_password.submit'|trans }}</a>
</div>